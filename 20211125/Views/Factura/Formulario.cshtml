<form action="/Factura/Insertar" method="post">
    <fieldset>
        <legend>Formulario facturación</legend>
        <p><label for="numero">Número:</label> <input type="text" name="numero" id="numero"
                placeholder="Introduce número"></p>
        <p><label for="nombre">Nombre:</label> <input type="text" name="nombre" id="nombre"
                placeholder="Introduce concepto"></p>
        <p><label for="importe">Importe:</label> <input type="text" name="importe" id="importe"
                placeholder="Introduce importe"></p>
        <p>
            <input type="radio" name="tipoiva" id="tipofacturaiva" value="IVA"><label for="tipofacturaiva">IVA</label>
        </p>
        <p>
            <input type="radio" name="tipoiva" id="tipofacturasiniva" value="Sin IVA"><label for="tipofacturasiniva">Sin
                IVA</label>
        </p>
        <p>
            <label for="pagada">Pagada:</label> <input type="checkbox" name="pagada" id="pagada" value="true">
        </p>
        <p><input type="submit" value="Enviar"></p>
    </fieldset>
</form>
